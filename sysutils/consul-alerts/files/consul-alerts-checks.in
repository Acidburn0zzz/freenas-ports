#!/bin/sh

# $FreeBSD$
#
# PROVIDE: consul-alerts-checks
# REQUIRE: LOGIN
# KEYWORD: shutdown
#
# Add the following lines to /etc/rc.conf.local or /etc/rc.conf
# to enable this service:
#
# consul_alerts_checks_enable (bool):	Set to NO by default.
#                               Set it to YES to enable consul-alerts-checks
# consul_alerts_env (string):   Set environment variables used with consul-alerts-checks
#                               Default is "".

. /etc/rc.subr

name=consul_alerts_checks
rcvar=consul_alerts_checks_enable

load_rc_config $name

: ${consul_alerts_checks_enable:="NO"}
: ${consul_alerts_checks_env:=""}

pidfile=/var/run/consul-alerts-checks.pid
procname="%%PREFIX%%/bin/consul"
command="/usr/sbin/daemon"
command_args="-p ${pidfile} /usr/bin/env ${consul_alerts_checks_env} ${procname} watch -type checks consul-alerts watch checks --alert-addr=localhost:9000 ${consul_alerts_checks_args}"

run_rc_command "$1"
